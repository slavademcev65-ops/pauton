Задание 1

matrix = [[1, 2, 3], [4, 5, 6], [7, 8, 9]]  
# Вывод всех элементов  
print("Все элементы матрицы:")  
for row in matrix:  
    print(row)  
odd_numbers =   
even_count = 0  
for row in matrix:  
    for num in row:  
        if num % 2 != 0:
            odd_numbers.append(num)  
        else:  
            even_count += 1  
print("\nНечётные числа:", odd_numbers)  
print("Количество чётных чисел:", even_count)  

Задание 2

matrix_1 = [[2, 4, 3, 6], [5, 7, 1, 5]]
matrix_2 = [[2, 9, 0, 2], [3, 4, 7, 6]]
num_rows = len(matrix_1)
num_cols = len(matrix_1[0])
answer_matrix = [[0 for _ in range(num_cols)] for _ in range(num_rows)]
print(f"Пустая answer_matrix: {answer_matrix}\n")
for i in range(num_rows):
    for j in range(num_cols):
        answer_matrix[i][j] = matrix_1[i][j] * matrix_2[i][j]
print(f"Результат перемножения (консоль): {answer_matrix}\n")
print("Суммы элементов для каждой строки:")
for i in range(num_rows):
    row_sum = sum(answer_matrix[i])
    print(f"Строка {i+1}: {row_sum}")


cols = int(input("Введите количество столбцов матрицы: "))  
matrix =   
for i in range(rows):  
    row =   
    for j in range(cols):  
        num = float(input(f"Введите элемент [{i+1}][{j+1}]: "))  
        row.append(num)   
    matrix.append(row)  
print("\nСозданная матрица:")  
for row in matrix:  
    print(row)  
